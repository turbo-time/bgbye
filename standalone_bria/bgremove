#!/bin/bash

# Batch Background Remover - System Wrapper Script
# This script allows you to run the batch background remover from anywhere

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"

# Path to the virtual environment and Python script
VENV_PATH="$SCRIPT_DIR/venv_batch"
PYTHON_SCRIPT="$SCRIPT_DIR/batch_background_remover.py"

# Check if virtual environment exists
if [ ! -d "$VENV_PATH" ]; then
    echo "Error: Virtual environment not found at $VENV_PATH"
    echo "Please run setup_batch.sh first from the script directory."
    exit 1
fi

# Check if Python script exists
if [ ! -f "$PYTHON_SCRIPT" ]; then
    echo "Error: Python script not found at $PYTHON_SCRIPT"
    exit 1
fi

# Activate virtual environment and run the script
source "$VENV_PATH/bin/activate"
python "$PYTHON_SCRIPT" "$@"